@page
@model api_auth_service.Pages.AndroidLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Android Login with Google</title>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>
    <h1>Login with Google (Android)</h1>

    <!-- Hidden form for submitting token -->
    <form id="android-login-form" method="post" asp-page="AndroidLogin">
        <input type="hidden" name="IdToken" id="id-token">
        <input type="hidden" name="AppCallbackUrl" id="app-callback-url">
    </form>

    <div id="google-signin-button"></div>

    <script>
        function handleCredentialResponse(response) {
            // Capture the callback URL sent from Android
            let urlParams = new URLSearchParams(window.location.search);
            let appCallbackUrl = urlParams.get("app");

            document.getElementById("id-token").value = response.credential;
            document.getElementById("app-callback-url").value = appCallbackUrl || "myapp://auth-success"; // Default callback

            // Submit form to send token to backend
            document.getElementById("android-login-form").submit();
        }

        window.onload = function() {
            google.accounts.id.initialize({
                client_id: "290066260782-o2gtb1mev7aq0pi736n3bcrl6v8m3fim.apps.googleusercontent.com",
                callback: handleCredentialResponse
            });

            google.accounts.id.renderButton(
                document.getElementById("google-signin-button"),
                { theme: "outline", size: "large" }
            );
        };
    </script>
</body>
</html>
